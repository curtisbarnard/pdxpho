---
import Header from '../components/Header.astro';
import '@fontsource/source-sans-pro';
import '@fontsource-variable/playfair-display';

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta name='description' content='Astro description' />
    <meta name='viewport' content='width=device-width' />
    <link rel='icon' type='image/svg+xml' href='/favicon.svg' />
    <meta name='generator' content={Astro.generator} />
    <title>{title}</title>
  </head>
  <Header />
  <body>
    <slot />
  </body>

  <style is:global>
    html {
      font-family: 'Source Sans Pro', sans-serif;
      font-size: 1rem;
      --alabaster-dark: hsl(76, 10%, 70%);
      --alabaster: hsl(76, 15%, 86%);
      --white: hsl(90, 20%, 98%);
      --black: hsla(78, 88%, 5%, 1);
      --pink: hsl(0, 29%, 55%);
      --dark-pink: hsl(0, 35%, 30%);
      --low-shadow: 0 1px 3px hsla(0, 0%, 0%, 0.12), 0 1px 2px hsla(0, 0%, 0%, 0.24);
      --medium-shadow: 0 3px 6px hsla(0, 0%, 0%, 0.15), 0 3px 6px hsla(0, 0%, 0%, 0.12);
      --high-shadow: 0 10px 20px hsla(0, 0%, 0%, 0.15), 0 3px 6px hsla(0, 0%, 0%, 0.1);

      background: var(--alabaster);
      color: var(--black);
    }

    h1,
    h2,
    h3,
    h4,
    h5,
    h6 {
      font-family: 'Playfair Display Variable';
      font-weight: 600;
    }

    a {
      color: var(--dark-pink);
    }

    a:visited {
      color: var(--pink);
    }

    body {
      margin: 0 auto;
      width: 100%;
      max-width: 90ch;
      padding: 1rem;
      line-height: 1.5;
    }

    * {
      box-sizing: border-box;
    }
  </style>
</html>
